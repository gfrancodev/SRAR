{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "." ,
    "paths": {
      "@entities/*":["./src/entities/*"],
      "@database/*":["./src/database/*"],
      "@repositories/*":["./src/repositories/*"],
      "@usecase/*":["./src/useCase/*"],
      "@providers/*":["./src/providers/*"]
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["coverage", "**/src/useCase/**/*.spec.ts"]
}
