          },
          "400": {
            "description": "Erro ao processar requisição",
            "content": {
              "Application/json": {
                "schema": {
                  "$ref": "#/definitions/error"
                }
              }
            }
          },
          "500": {
            "description": "Erro no servidor.",
            "content": {
              "Application/json": {
                "schema": {
                  "$ref": "#/definitions/error"
                }
              }
            }
          }
        }
      }
    },
    "/home": {
      "get": {
        "tags": [
          "Sistema"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "summary": "Exibe id do usuário.",
        "responses": {
          "200": {
            "description": "Sucesso.",
            "content": {
              "Application/json": {
                "schema": {
                  "$ref": "#/definitions/id"
                }
              }
            }
          },
          "401": {
            "description": "Requisição não autorizada",
            "content": {
              "Application/json": {
                "schema": {
                  "$ref": "#/definitions/error"
                }
              }
            }
          },
          "500": {
            "description": "Erro no servidor.",
            "content": {
              "Application/json": {
                "schema": {
                  "$ref": "#/definitions/error"
                }
              }
            }
          }
        }
      }
    },
